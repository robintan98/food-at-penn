<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodpenn">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:usesCleartextTraffic="true"
        android:name = "com.foodatpenn.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.foodatpenn.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.foodatpenn.LandingPageActivity" />
        <activity android:name="com.foodatpenn.RegistrationActivity" />
        <activity android:name="com.foodatpenn.ModifyPageActivity"/>
        <activity android:name="com.foodatpenn.ModifyActivity"/>
        <activity android:name="com.foodatpenn.AllPostsActivity"/>
        <activity android:name="com.foodatpenn.ReviewUserActivity"/>
        <activity android:name="com.foodatpenn.ViewAllActivity"/>
        <activity android:name="com.foodatpenn.CreatePostsActivity"/>
        <activity android:name="com.foodatpenn.YourPostActivity"/>
        <activity android:name="com.foodatpenn.WriteCommentActivity"/>

    </application>

</manifest>